.container
  .jumbotron
    %h1.center
      Faceblurd
    %h3.center
      The fast, fun, and easy way to anonymize your pictures
    .row
      .col-md-6.col-md-offset-3
        .h4 Fetch image from URL
        = form_for @image do |f|
          .input-group
            = f.text_field :remote_file_url, class: 'form-control',
                                             placeholder: 'image.url'
            %span.input-group-btn
              = f.submit 'Fetch', class: 'btn btn-primary'
        .h4 Upload file
        = form_for @image do |f|
          .input-group
            = f.file_field :file, class: 'form-control'
            %span.input-group-btn
              = f.submit 'Upload', class: 'btn btn-primary btn-file'